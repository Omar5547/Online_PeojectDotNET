
@model List<Category>
<section id="services" class="services section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>اقسام الموقع</h2>
        <p> نحن في خدمتكم ونقدم لكم افضل المنتجات اينما كنتم مع امكانية توصيل الطلبات الي منزلكم </p>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="row gy-4">
            @foreach (var item in Model)
            {
                <div class="col-xl-4 col-lg-6" data-aos="fade-up" data-aos-delay="100">
                    <div class="service-item d-flex" style="width:100% !important;">
                        <div class="icon flex-shrink-0"><i class="bi @item.Photo"></i></div>
                        <div>
                            <h4 class="title"><a href="/Home/Products/@item.Id" class="stretched-link">@item.Name</a></h4>
                            <p class="description">@item.Description</p>
                        </div>
                    </div>
                </div>

            }
            @if (ViewBag.isAdmin)
            {
                <a href="/Categories" class="btn btn-primary">التحكم في الأقسام</a>
            }

            <!-- End Service Item -->

            

        </div>

    </div>

</section><!-- /Services Section -->
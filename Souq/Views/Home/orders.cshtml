@model List<Order>
@foreach (var item in Model)
{
    <br />
    <br />

    <br />

    <br />
    <center style="background:orange">

    
        <h2> رقم الطلب @item.Id </h2>
        <h2>توصيل العنوان @item.Address</h2>
    </center>
    <table class="table table-hover table-stribbed">
        <tr>
            <th>اسم المنتج</th>
            <th>السعر</th>
            <th>الكمية</th>
            <th>الاجمالي</th>


        </tr>
        @{
            decimal sum = 0;
        }

    @foreach (var detail in item.OrderDetails)
    {
        <tr>
            <td>@detail.Product.Name</td>
            <td>@detail.Price</td>
            <td>@detail.Qty</td>
            <td>@detail.Totalprice</td>
                @{
                    sum += (decimal)detail.Totalprice;
                }
            </tr>
    }
    <tr style="background:green; color:white">
        <td></td>
            <td></td>

            <td></td>
            <td> الاجمالي :@sum</td>


    </tr>
    </table>

}
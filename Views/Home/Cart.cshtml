@model List<Cart>
<table class="table table-hover">
    <tr>
        <th>
            اسم المنتج
        </th>
        <th>
            الكمية
        </th>
        <th>
            السعر
        </th>
        <th>
            الاجمالي
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Product.Name</td>
            <td>
                <a href="/Home/currentProduct/@item.ProductId"><img src="https://localhost:54538/upload/@item.Product.Photo" width="100" height="100" />  </a>
              
            </td>
            <td>@item.Qty</td>
            <td>@item.Product.Price</td>
            <td>@(item.Qty * item.Product.Price)</td>

            

        </tr>
    }
</table>
<form method="post" asp-action="AddOrder">
    <input class="form-control" id="name" name="name" placeholder="name" />
    <input class="form-control" id="address" name="address" placeholder="address" />
    <input class="form-control" id="email" name="email" placeholder="email" />
    <input class="form-control" id="mobile" name="mobile" placeholder="mobile" />
    <input type="submit" class="btn btn-success" href="/Home/Addorder" value=" اكمال الطلب"/>
        


</form>

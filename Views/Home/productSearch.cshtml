@model List<Product>
<div class="container mt-5 mb-5">
    <form asp-action="ProductSearch" asp-controller="Home" method="get">

        <div class="row">
            <input type="submit" class="col-sm-2 btn btn-primary" value=" ابحث" />
            <div class="col-sm-10">
                <input type="text" name="xname" id="xname" style="text-align:right" class="form-control" placeholder="البحث" />
            </div>


        </div>
    </form>
</div>




<section id="services" class="services section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>المنتجات الخاصة بقسم</h2>
        <p> نحن في خدمتكم ونقدم لكم افضل المنتجات اينما كنتم مع امكانية توصيل الطلبات الي منزلكم </p>
    </div><!-- End Section Title -->

    <div class="container">
        <div class="row gy-4">
            @foreach (var item in Model)
            {
                <div class="col-xl-4 col-lg-6" data-aos="fade-up" data-aos-delay="100">
                    <div class="service-item" style="width:100% !important;">
                        <img src="../@item.Photo" class="myProductImage" />
                        <div>
                            <h4 class="title"><a href="/home/currentProduct/@item.Id" class="stretched-link">@item.Name</a></h4>
                            <p class="description">@item.Description</p>
                        </div>
                    </div>
                </div>
            }
            <!-- End Service Item -->
        </div>
    </div>

</section><!-- /Services Section -->

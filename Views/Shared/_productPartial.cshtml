@model Product
<div class="col-lg-4 col-md-6 portfolio-item isotope-item _@Model.Cat.Id">
    <div class="portfolio-content h-100">
        <a href="@Model.Photo" data-gallery="portfolio-gallery-app" class="glightbox">
            <img src="https://localhost:54538/upload/@Model.Photo" class="img-fluid" alt="@Model.Name">
        </a>

        <div class="portfolio-info">
            <h4>@Model.Name</h4>
            <p>@Model.Price</p>
        </div>
        <center>
            <a class="btn btn-success" href="/Home/AddProducttoCart/@Model.Id">
                اضافة الي السلة
                <i class="bi bi-plus"></i>
            </a>
            <a asp-controller="products" asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.Id">Edit</a>
            <a asp-controller="products" asp-action="Details" class="btn btn-secondary" asp-route-id="@Model.Id">Details</a>
            <a asp-controller="products" asp-action="Delete" class="btn btn-danger" asp-route-id="@Model.Id">Delete</a>
        </center>
    </div>
</div>